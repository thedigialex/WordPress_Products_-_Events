<resources>
    <!-- Base application theme. -->
    <style name="Theme.WordPressPE" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryVariant">@color/darkAccent</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkAccent</item>
        <item name="colorSecondaryVariant">@color/darkAccent</item>
        <item name="colorOnSecondary">@color/darkAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lightPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/red_hat_display_medium</item>
        <item name="android:textColor">@color/darkAccent</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>