<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/product_background"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/section_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/topProductLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Price"
                    android:textAppearance="@style/MyTextAppearance"
                    android:textColor="@color/darkAccent" />

                <TextView
                    android:id="@+id/productRating"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0/0"
                    android:textAppearance="@style/MyTextAppearance"
                    android:textColor="@color/darkAccent" />
            </LinearLayout>

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="Name"
                android:textAppearance="@style/MyTextAppearance"
                android:textColor="@color/darkAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/cartViewButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/showExtraDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="more info" />

                <Button
                    android:id="@+id/removeFromCartButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="3"
                    android:background="@drawable/remove_from_cart_button"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/addFromCartButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_weight="3"
                    android:background="@drawable/add_to_cart_button" />

            </LinearLayout>

            <TextView
                android:id="@+id/extraDetails"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textAppearance="@style/MyTextAppearance"
                android:textColor="@color/darkAccent"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
